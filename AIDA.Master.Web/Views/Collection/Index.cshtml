@using Radyalabs.Core.Helper
@{
    ViewBag.Title = "Upload Collection";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "import-collection";
    string dateDefault = DateTime.Now.AddMonths(-1).ToString("MM-yyyy");
}
@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
}

@section CustomScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_collection-index.js"></script>
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Upload Collection
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "Collection")">Upload Collection</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<div class="row">
    <div class="col-md-12">
        <form id="main-form" class="form-horizontal" role="form" action="@Url.Action("Import", "Collection")" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Bulan-Tahun <i class="required">*</i></label>
                    <div class="col-md-4">
                        <input class="form-control datepicker text-center" type="text" value="@dateDefault" name="FormattedValidDate" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">File <i class="required">*</i></label>
                    <div class="col-md-4">
                        <input class="form-control" type="file" name="InputFile">
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn blue">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>