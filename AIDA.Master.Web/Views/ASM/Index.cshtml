@using Radyalabs.Core.Helper
@using AIDA.Master.Infrastucture.Constants
@{
    ViewBag.Title = "ASM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "asm";
}

@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
}

@section CustomScript{
    @if (RoleCode.KaCab.Equals(ViewBag.UserAuth.RoleCode) || RoleCode.NSM.Equals(ViewBag.UserAuth.RoleCode))
    {
        <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_asm-index-nsm.js"></script>
    }
    else
    {
        <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_asm-index.js"></script>
    }
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Daftar ASM
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "ASM")">ASM</a>
        </li>
    </ul>
    <div class="page-toolbar">
        @if (ViewBag.IsEditable)
        {
            <a id="btn-add" href="@Url.Action("Add", "ASM")" class="btn btn-fit-height btn-sm blue-stripe" data-container="body" data-placement="left" data-original-title="" title="">
                <i class="fa fa-plus" aria-hidden="true"></i> Tambah
            </a>
        }
    </div>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    @Html.AntiForgeryToken()
    <div id="tbl-wrapper" class="col-md-12">
        <table class="datatable table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th rowspan="2" style="text-align: right">#</th>
                    <th rowspan="2" style="text-align: left">Action</th>
                    <th colspan="2" style="text-align: center">Upload</th>
                    <th rowspan="2" style="text-align: center">NIK</th>
                    <th rowspan="2">Nama</th>
                    <th rowspan="2" style="text-align: center">Default Rayon Type</th>
                    <th rowspan="2" style="text-align: center">ASM</th>
                    <th rowspan="2" style="text-align: center">Valid From</th>
                    <th rowspan="2" style="text-align: center">Valid To</th>
                </tr>
                <tr>
                    <th><i class="fa fa-check-circle"></i></th>
                    <th style="text-align: center; width: 100px">Sampai</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<!-- END PAGE CONTENT-->