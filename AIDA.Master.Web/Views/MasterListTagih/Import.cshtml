@using Radyalabs.Core.Helper
@model AIDA.Master.Service.Models.MasterImportViewModel
@{
    ViewBag.Title = "Upload Master List Tagih";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "mastertagih|mastertagih-list";
}

@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
}

@section CustomScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_master-list-sales-import.js"></script>
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Upload Master List Tagih <small>upload excel</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "MasterListTagih")">Master List Tagih</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Import", "MasterListTagih")">Upload</a>
        </li>
    </ul>
    <div class="page-toolbar">
    </div>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<div class="portlet box blue">
    <div class="portlet-body form">
        <form id="main-form" class="form-horizontal" role="form" action="@Url.Action("Preview", "MasterListTagih")" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-4">
                        <a class="" href="@Url.Action("DownloadTemplate", "MasterListTagih")"><i class="fa fa-download" aria-hidden="true"></i> download template</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Valid Mulai<i class="required">*</i></label>
                    <div class="col-md-4">
                        <input class="form-control datepicker input-small" type="text" name="FormattedValidDate" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">File<i class="required">*</i></label>
                    <div class="col-md-4">
                        <input type="file" name="InputFile">
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn blue">Preview</button>
                        <a href="@Url.Action("Index", "MasterListTagih")" class="btn default">Kembali</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
