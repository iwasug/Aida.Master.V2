@using Radyalabs.Core.Helper
@model AIDA.Master.Service.Models.ImportMasterListViewModel
@{
    ViewBag.Title = "Data Double Upload Master List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "mastersales|mastersales-list";
}

@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/css/buttons.dataTables.min.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/extensions/Buttons/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
}

@section CustomScript{
    <script>
        var monthYear = '@Model.FormattedValidDate';
    </script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_master-list-sales-double.js"></script>
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Double Data Upload Master List
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "MasterListSales")">Master List</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Import", "MasterListSales")">Upload</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="javascript:;">Double</a>
        </li>
    </ul>
    <div class="page-toolbar">
    </div>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<div class="portlet light">
    <div class="portlet-body">
        <table id="tbl-double" class="datatable table table-striped table-bordered table-hover table-nowrap">
            <thead>
                <tr>
                    <th class="text-right">
                        #
                    </th>
                    <th class="text-center">
                    </th>
                    <th class="text-center">
                        ID
                    </th>
                    <th style="text-align: center;">
                        Rayon Code
                    </th>
                    <th style="text-align: left;">
                        Salesman
                    </th>
                    <th style="text-align: center;">
                        Kode Customer
                    </th>
                    <th style="text-align: left;">
                        Nama Customer
                    </th>
                    <th style="text-align: center;">
                        Valid From
                    </th>
                    <th style="text-align: center;">
                        Valid To
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.ListCustomer != null && Model.ListCustomer.Count > 0)
                {
                    foreach (var item in Model.ListCustomer)
                    {
                        <tr data-id="@item.Id">
                            <td align="right"></td>
                            <td align="center"><input type="checkbox" name="Ids" value="@item.Id" /></td>
                            <td align="center">@item.Id</td>
                            <td align="center">@item.RayonCode</td>
                            <td align="left">@item.SLMFullname</td>
                            <td align="center">@item.CustomerCode</td>
                            <td align="left">@item.CustomerName</td>
                            <td align="center">@item.FormattedValidFrom</td>
                            <td align="center">@item.FormattedValidTo</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>