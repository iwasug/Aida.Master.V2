@using Radyalabs.Core.Helper
@{
    ViewBag.Title = "Hirarki Sales";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "mastersales|mastersales-hier";
}

@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
}

@section CustomScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_hier-sales-index.js"></script>
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Hirarki Sales
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "HierSales")">Hirarki Sales</a>
        </li>
    </ul>
    <div class="page-toolbar">
        @if (ViewBag.IsEditable)
        {
            <a id="btn-import" href="@Url.Action("ImportSales", "HierSales")" class="btn btn-fit-height btn-sm green-stripe" data-container="body" data-placement="left" data-original-title="" title="">
                <i class="fa fa-cloud-upload" aria-hidden="true"></i> Upload
            </a>
        }
        <a id="btn-export-excel" class="btn btn-fit-height btn-sm green-stripe" disabled>
            <i class="fa fa-file-excel-o"></i> Download
        </a>
        <form id="form-export-excel" method="post" action="@Url.Action("ExportSales", "HierSales")" target="_blank">
            <input type="hidden" name="Keyword" value="" />
            <input type="hidden" name="Length" value="" />
            <input type="hidden" name="Start" value="" />
            <input type="hidden" name="IndexOrderCol" value="" />
            <input type="hidden" name="OrderType" value="" />
        </form>
    </div>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <table class="datatable table table-striped table-bordered table-hover table-nowrap">
            <thead>
                <tr>
                    <th rowspan="2">#</th>
                    <th colspan="2" style="text-align: center">Rayon</th>
                    <th rowspan="2" style="text-align: center">Cabang</th>
                    <th colspan="2" style="text-align: center">Salesman</th>
                    <th colspan="2" style="text-align: center">Supervisor</th>
                    <th colspan="2" style="text-align: center">ASM</th>
                    <th colspan="2" style="text-align: center">KaCab</th>
                    <th colspan="2" style="text-align: center">RM</th>
                    <th colspan="2" style="text-align: center">Valid</th>
                </tr>
                <tr>
                    <th>Kode</th>
                    <th>Tipe</th>
                    <th>NIK</th>
                    <th style="min-width: 100px">Nama</th>
                    <th>NIK</th>
                    <th style="min-width: 100px">Nama</th>
                    <th>NIK</th>
                    <th style="min-width: 100px">Nama</th>
                    <th>NIK</th>
                    <th style="min-width: 100px">Nama</th>
                    <th>NIK</th>
                    <th style="min-width: 100px">Nama</th>
                    <th>Dari</th>
                    <th>Sampai</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<!-- END PAGE CONTENT-->
