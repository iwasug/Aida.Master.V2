@using Radyalabs.Core.Helper
@{
    ViewBag.Title = "Hirarki Sales - Rayon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.ActiveMenu = "mastersales|mastersales-hier";
}

@section PageStyle{
    <link rel="stylesheet" type="text/css" href="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
}

@section PageScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
}

@section CustomScript{
    <script type="text/javascript" src="@SiteHelper.GetBaseUrl()Assets/custom/js/_hier-sales-rayon.js"></script>
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Daftar Customer <small>Rayon <span class="label bg-grey-cascade">@ViewBag.Rayon</span></small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@SiteHelper.GetBaseUrl()"><i class="fa fa-home"></i></a>
            <a href="@Url.Action("Index", "HierSales")">Hirarki Sales</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Rayon", "HierSales", new { id = ViewBag.Rayon })">Rayon</a>
        </li>
    </ul>
    <div class="page-toolbar">
        <a id="btn-export-excel" class="btn btn-fit-height btn-sm green-stripe" disabled>
            <i class="fa fa-file-excel-o"></i> Export
        </a>
        <form id="form-export-excel" method="post" action="@Url.Action("ExportCustomer", "HierSales")" target="_blank">
            <input type="hidden" name="Keyword" value="" />
            <input type="hidden" name="Length" value="" />
            <input type="hidden" name="Start" value="" />
            <input type="hidden" name="IndexOrderCol" value="" />
            <input type="hidden" name="OrderType" value="" />
            <input type="hidden" name="Rayon" value="@ViewBag.Rayon" />
        </form>
    </div>
</div>
<!-- END PAGE HEADER-->
@Html.Partial("_FlashMessage")
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <table class="datatable table table-striped table-bordered table-hover" data-rayon="@ViewBag.Rayon">
            <thead>
                <tr>
                    <th rowspan="2">#</th>
                    <th rowspan="2" style="text-align: center">Rayon</th>
                    <th colspan="2" style="text-align: center">Salesman</th>
                    <th colspan="2" style="text-align: center">Customer</th>
                    <th colspan="2" style="text-align: center">Valid</th>
                </tr>
                <tr>
                    <th>NIK</th>
                    <th>Nama</th>
                    <th>Kode</th>
                    <th>Nama</th>
                    <th>Dari</th>
                    <th>Sampai</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<!-- END PAGE CONTENT-->
